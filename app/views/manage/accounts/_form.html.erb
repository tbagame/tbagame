<div class="table_full">
  <table width="100%">
    <col class="th"/>
    <col width="400"/>
    <col/>
    <tr>
      <th>用户名</th>
      <td>
        <input type="text" name="name" id="name" class="input length_4 input_hd required" value="<%= @account.name %>"/>
      </td>
      <td>
        <div class="fun_tips"></div>
      </td>
    </tr>
    <tr>
      <th>密码</th>
      <td>
        <input type="password" name="password" class="input length_4 required"/>
      </td>
      <td>
        <div class="fun_tips"></div>
      </td>
    </tr>
  </table>
</div>
<div class="p10"></div>
<div class="cc">
  <div class="btn_wrap_pd">
    <button class="btn btn_submit" id="save" type="submit">保存</button>
  </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#form').validate({
            rules: {
                name: {
                    remote: {
                        url: '/check_name.json',
                        type: 'post'
                    }
                }
            },
            messages: {
                name: {
                    remote: '该用户名已存在'
                }
            }
        })
    })
</script>
