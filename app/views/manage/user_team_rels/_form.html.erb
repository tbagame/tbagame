<div class="table_full">
  <table width="100%">
    <col class="th"/>
    <col width="400"/>
    <col/>
    <tr>
      <th>用户名称</th>
      <td>
        <input type="text" name="nickname" class="input length_5 input_hd required" readonly="readonly" value="<%= @user.nickname %>"/>
        <input type="hidden" name="user_id" id="user_id" value="<%= @user.id %>"/>
      </td>
      <td>
        <div class="fun_tips"></div>
      </td>
    </tr>
    <tr>
      <th>角色</th>
      <td>
        <select name="part" id="part">
          <%= options_for_select(part_list, @user_team_rel[:part]) %>
        </select>
      </td>
      <td>
        <div class="fun_tips"></div>
      </td>
    </tr>
  </table>
</div>
<div class="p10"></div>
<div class="cc">
  <div class="btn_wrap_pd">
    <button class="btn btn_submit" id="save" type="submit">保存</button>
  </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#form').validate({
            rules: {
                part: {
                    remote: {
                        url: '/user_center/rel',
                        type: 'post',
                        data: {
                            user_id: function() {
                                return $( "#user_id" ).val();
                            },
                            part: function() {
                                return $( "#part" ).val();
                            }
                        }
                    }
                }
            },
            messages: {
                part: {
                    remote: '该角色已存在'
                }
            }
        })
    })
</script>