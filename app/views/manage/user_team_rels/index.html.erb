<div class="search_type cc mb10">
  <div class="h_a">用户列表</div>
</div>

<div class="table_list">
  <table width="100%">
    <colgroup>
      <col/>
      <col/>
      <col/>
      <col/>
    </colgroup>
    <thead>
    <tr>
      <td>ID</td>
      <td>用户昵称</td>
      <td>角色</td>
      <td>操作</td>
    </tr>
    </thead>
    <% @user_team_rels.each do |rel| %>
        <tr>
          <td><%= rel.id %></td>
          <td><%= rel.user.nickname %></td>
          <td><%= rel.part %></td>
          <td>
          <%= link_to '删除',
                      {:controller => :user_team_rels, :action => 'destroy', :id => rel.id},
                      {:method => :delete, :confirm => '你确定要删除此用户吗?', :class => 'btn btn_error'}
          %>
          </td>
        </tr>
    <% end %>
  </table>
</div>
<!--<div><a href="/manage/users/new" class="btn"><span class="add"></span>新增用户</a></div>-->
<div class="p10 pages">
  <%= will_paginate @user_team_rels %>
</div>